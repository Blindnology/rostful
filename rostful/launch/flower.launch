<launch>
  <!-- ******************************* Arguments ******************************* -->
  <arg name="broker_url" default="redis://localhost:6379"/>
  <arg name="worker_tasks" default="rostful.celery_tasks"/>

  <!-- flower server -->
  <node pkg="rostful" name="flower" type="flower" args="--broker-url $(arg broker_url) --worker-tasks $(arg worker_tasks)">
  </node>

</launch>
